{{#if editable}}
  <form>
    <label for="title">Edit title</label>
    <div {{action "something" on="change"}}>
      {{input type="text" post=model.title}}
    </div>

    <label for="title">Edit author</label>
    {{input type="text" post=model.author}}

    <label for="title">Edit content</label>
    {{textarea type="text" post=model.content}}
  </form>
{{/if}}

<button {{action "goBackToIndex"}}>Click to go back</button>

<button {{action "toggleEdit"}}>Toggle edit{{if editable 'Disable' 'Enable'}}</button>